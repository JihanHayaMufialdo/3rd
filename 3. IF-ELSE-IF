Percabangan if/else/if merupakan percabangan yang memiliki lebih dari dua blok pilihan.

//BENTUK :

if(kondisi1){
  //pernyataan jika sesuai kondisi 1
}
else if(kondisi2){
  //pernyataan jika sesuai kondisi 2
}
else if(kondisi3){
  //pernyataan jika sesuai kondisi 3
}

...dan seterusnya...

//CONTOH :

#include <iostream>
using namespace std;
int main()
{
  int nilai;
  cin >> nilai;
  
  
  
  if(nilai>=90){
    cout << "GRADE A";
  }
  else if(nilai>=80){
    cout << "GRADE B";
  }
  else if(nilai>=70){
    cout << "GRADE C";
  }
  else {
    cout << "GRADE D";
  }
  
